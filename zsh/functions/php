php_debug () {
    IDEKEY="PhpStorm1"

    if [[ $1 == disable ]]; then
        export DBGP_IDEKEY=""
        export XDEBUG_CONFIG=""
        export PHP_IDE_CONFIG="serverName=sandbox"
        echo "remote debug disabled"
    elif [[ $1 == enable ]]; then
        export DBGP_IDEKEY="$IDEKEY"
        export XDEBUG_CONFIG="remote_enable=1 remote_mode=req remote_port=9000 remote_host=10.0.2.2 remote_connect_back=0 remote_autostart=0 remote_handler=dbgp cli_color=1"
        echo "remote debug enabled. Set your ide to listen on port 9000 for key $IDEKEY"
    else
        echo "Usage: xdebug_env.sh enable|disable"
    fi
}
